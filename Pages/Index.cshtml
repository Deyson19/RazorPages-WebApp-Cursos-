@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <h1 class="display-4">Welcome</h1>

    <a class="btn btn-outline-primary" asp-page="./Crear" >Crear Curso</a>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Tecnologías</th>
                <th>Precio</th>
                <th>Instructor</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var curso in Model.cursos)
            {
                <tr>
                    <td>@curso.Name</td>
                    <td>@curso.Description</td>
                    <td>
                        @for (int i = 0; i < curso.Technologies.Length; i++)
                        {
                            <span>
                                @curso.Technologies[i].ToString()
                                <hr />
                            </span>
                        }
                    </td>
                    <td>@curso.Price</td>
                    <td>@curso.Instructor</td>

                    <td>
                        <a class="btn btn-info" asp-page="/Detalle" asp-route-id="@curso.Id">Detalles </a>
                        <a class="btn btn-primary" asp-page="/Crear" asp-route-id="@curso.Id">Editar </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>


</div>
